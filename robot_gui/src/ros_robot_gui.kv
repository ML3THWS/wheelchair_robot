FloatLayout:

    MDBoxLayout:
        md_bg_color: 0, 0, 0, 1
        #changing the window background colour
    
    BoxLayout:
        id: box #an id makes it possible to acces the function (here Box Layout) from everywhere else e.g. the python code
        orientation: "vertical"
        size_hint: 1, 0.2

        MDToolbar:
            title: "Autonomer Rollstuhl-Roboter"


    Image:
        source: "fhws_2.png"
        size_hint: 0.64, 0.26
        pos_hint: {"center_x": .88, "center_y": 0.037}


    Image:
        source: "Ultrasound_up.jpg"
        size_hint: 0.25, 0.25
        pos_hint: {"center_x": .35, "center_y": 0.6}


    MDCard:
        id: front_sensor
        orientation: "vertical"
        padding: "8dp"
        size_hint: 0.15, 0.15
        size: "140dp", "90dp"
        pos_hint: {"center_x": .35, "center_y": .82}
        md_bg_color: 0, 1, 0, 1

        MDLabel:
            text: "Front"
            theme_text_color: "Primary"
            size_hint_y: None
            height: self.texture_size[1]
        
        MDSeparator:
            height: "1dp"

        MDLabel:
            id: front_sensor_label
            text: "Sensor frei"


    MDCard:
        id: back_sensor
        orientation: "vertical"
        padding: "8dp"
        size_hint: 0.15, 0.15
        size: "140dp", "90dp"
        pos_hint: {"center_x": .35, "center_y": .38}
        md_bg_color: 0, 1, 0, 1

        MDLabel:
            text: "Heck"
            theme_text_color: "Primary"
            size_hint_y: None
            height: self.texture_size[1]
        
        MDSeparator:
            height: "1dp"

        MDLabel:
            id: back_sensor_label
            text: "Sensor frei"


    MDCard:
        id: left_sensor
        orientation: "vertical"
        padding: "8dp"
        size_hint: 0.15, 0.15
        size: "140dp", "90dp"
        pos_hint: {"center_x": .17, "center_y": .6}
        md_bg_color: 0, 1, 0, 1

        MDLabel:
            text: "Links"
            theme_text_color: "Primary"
            size_hint_y: None
            height: self.texture_size[1]
        
        MDSeparator:
            height: "1dp"

        MDLabel:
            id: left_sensor_label
            text: "Sensor frei"


    MDCard:
        id: right_sensor
        orientation: "vertical"
        padding: "8dp"
        size_hint: 0.15, 0.15
        size: "140dp", "90dp"
        pos_hint: {"center_x": .53, "center_y": .6}
        md_bg_color: 0, 1, 0, 1

        MDLabel:
            text: "Rechts"
            theme_text_color: "Primary"
            size_hint_y: None
            height: self.texture_size[1]
        
        MDSeparator:
            height: "1dp"

        MDLabel:
            id: right_sensor_label
            text: "Sensor frei"


    MDRaisedButton:
        id: restart_button
        text: "Neustarten"
        md_bg_color: 0, 0, 1, 1
        size_hint: 0.2, 0.1
        pos_hint: {"center_x": 0.82, "center_y": 0.85}
        on_press: app.show_alert_dialog()
        #app is an instace of the app objet (MDApp) 
        #from the gui_app_class we created that inherited from MDApp


    MDRaisedButton:
        id: test_button
        text: "Test_Button"
        md_bg_color: 0, 0, 1, 1
        size_hint: 0.2, 0.1
        pos_hint: {"center_x": 0.82, "center_y": 0.70}
        on_press: app.testing(*args) #auf jeweils richtige funktion Ã¤ndern


    #button for requesting a vertain echo-sensor-error

    MDCard:
        size_hint: 0.28, 0.270
        pos_hint: {"center_x": .82, "center_y": .355}
        md_bg_color: 1, 1, 0, 1
        radius: [15, 15, 15, 15]


    MDLabel:
        text: "Sensor Warnung aktivieren:"
        theme_text_color: "Custom"
        text_color: 0, 0, 0, 1
        halign: "center"
        pos_hint: {"center_x": 0.82, "center_y": 0.47}

    MDRaisedButton:
        id: front_warning
        text: "Front"
        md_bg_color: 0, 0, 1, 1
        size_hint: 0.08, 0.1
        pos_hint: {"center_x": 0.82, "center_y": 0.4}
        on_press: app.request_echo_warning_front(*args) 

    
    MDRaisedButton:
        id: back_warning
        text: "Heck"
        md_bg_color: 0, 0, 1, 1
        size_hint: 0.08, 0.1
        pos_hint: {"center_x": 0.82, "center_y": 0.29}
        on_press: app.request_echo_warning_back(*args)


    MDRaisedButton:
        id: left_warning
        text: "Links"
        md_bg_color: 0, 0, 1, 1
        size_hint: 0.08, 0.21
        pos_hint: {"center_x": 0.735, "center_y": 0.345}
        on_press: app.request_echo_warning_left(*args)


    MDRaisedButton:
        id: right_warning
        text: "Rechts"
        md_bg_color: 0, 0, 1, 1
        size_hint: 0.08, 0.21
        pos_hint: {"center_x": 0.905, "center_y": 0.345}
        on_press: app.request_echo_warning_right(*args)

    